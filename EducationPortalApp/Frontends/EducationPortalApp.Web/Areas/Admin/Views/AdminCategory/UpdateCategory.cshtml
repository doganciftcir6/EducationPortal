@using System.Text.Json;
@model CategoryVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Update Category</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="AdminCategory" asp-action="UpdateCategory" method="post">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div class="form-group">
                            <label for="categoryName">Category Name</label>
                            <input asp-for="@Model.CategoryName" id="categoryName" class="form-control" />
                            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
